            android:layout_height="50dp"
            android:textAlignment="center"
            android:gravity="center"
            android:ems="10"
            android:textSize="18sp"
            android:textColor="#000000"
            android:maxLength="5"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/box3"
        android:layout_width="400dp"
        android:layout_height="50dp"
