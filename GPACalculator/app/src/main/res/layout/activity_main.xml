<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shelby.gpacalculator.MainActivity">

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Number of Classes this semester"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/classNumber"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="Current GPA"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/currentGPA"
        android:layout_toLeftOf="@+id/currentGPA"
        android:layout_toStartOf="@+id/currentGPA"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:text="Passed credit hours"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"

        android:layout_marginTop="85dp"

        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:maxLength="5"
        android:id="@+id/currentGPA"

        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:maxLength="3"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/passedHours"

        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/currentGPA"
        android:layout_alignStart="@+id/currentGPA" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:maxLength="1"
        android:id="@+id/classNumber"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/passedHours"
        android:layout_alignLeft="@+id/passedHours"
        android:layout_alignStart="@+id/passedHours" />

</RelativeLayout>
