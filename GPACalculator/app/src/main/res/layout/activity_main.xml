<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shelby.gpacalculator.MainActivity">

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="Number of Classes this semester"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:text="Current GPA"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="93dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Passed credit hours"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:maxLength="3"
        android:inputType="number"
        android:background="@drawable/border"
        android:id="@+id/passedHours"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/currentGPA"
        app:layout_constraintLeft_toLeftOf="@+id/currentGPA"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="0dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:maxLength="1"
        android:background="@drawable/border"
        android:id="@+id/classNumber"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/passedHours"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/passedHours"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="-29dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:background="@drawable/border"
        android:id="@+id/currentGPA"
        android:layout_marginRight="124dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4" />


</android.support.constraint.ConstraintLayout>
